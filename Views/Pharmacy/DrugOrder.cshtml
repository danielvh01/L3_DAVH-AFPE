@model L3_DAVH_AFPE.Models.PharmacyModel
@using L3_DAVH_AFPE.Models.Data
@{
    ViewData["Title"] = "DrugOrder";
}

<h1>DrugOrder</h1>
@if (TempData["testmsg"] != null)
{
    <script type="text/javascript">
       alert("@TempData["testmsg"]");
    </script>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="DrugOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            @Html.HiddenFor(model => model.Name)
            <input asp-for="Name" class="form-control" disabled />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
            <div class="form-group">
                <label class="control-label text-xl-left">Stock: @Html.DisplayFor(model => model.Quantity)</label>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @Html.HiddenFor(model => model.Description)
                <input asp-for="Description" class="form-control" disabled />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Production_Factory" class="control-label"></label>
                @Html.HiddenFor(model => model.Production_Factory)
                <input asp-for="Production_Factory" class="form-control" disabled />
                <span asp-validation-for="Production_Factory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                @Html.HiddenFor(model => model.Price)
                <input asp-for="Price" class="form-control" disabled />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input class="form-control" type="number" name="Quantity" id="Quantity" value="1" min="1" max="@(Model.Quantity)" />
                <span class="text-danger" required></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



